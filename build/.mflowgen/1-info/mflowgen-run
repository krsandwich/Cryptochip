#! /usr/bin/env bash
set -euo pipefail
#=========================================================================
# mflowgen-run
#=========================================================================
# Generator : /home/users/krzanich/mflowgen/mflowgen/core/build_orchestrator.py

# Pre

rm -f .time_end
date +%Y-%m%d-%H%M-%S > .time_start
MFLOWGEN_STEP_HOME=$PWD
export design_name=Example
export clock_period=20.0
export construct_path=/home/users/krzanich/EE272B/design/construct.py
export adk=skywater-130nm-adk
export adk_view=view-standard

# Commands

echo "Design name      -- Example"
echo "Clock period     -- 20.0"
echo "ADK              -- skywater-130nm-adk"
echo "ADK view         -- view-standard"
echo
echo "Constructed from -- /home/users/krzanich/EE272B/design/construct.py"
echo

# Post

cd $MFLOWGEN_STEP_HOME
date +%Y-%m%d-%H%M-%S > .time_end

