#! /usr/bin/env bash
set -euo pipefail
#=========================================================================
# mflowgen-run
#=========================================================================
# Generator : /home/users/krzanich/mflowgen/mflowgen/core/build_orchestrator.py

# Pre

rm -f .time_end
date +%Y-%m%d-%H%M-%S > .time_start
MFLOWGEN_STEP_HOME=$PWD
export clock_period=20.0
export design_name=Example
export strip_path=ExampleTb/Example_inst

# Commands

pt_shell -file pt_px.tcl
cp reports/*.pwr.rpt outputs/design.pwr.rpt
cp reports/*.pwr.hier.rpt outputs/design.pwr.hier.rpt
cp reports/*.sw.rpt outputs/design.sw.rpt

# Post

cd $MFLOWGEN_STEP_HOME
date +%Y-%m%d-%H%M-%S > .time_end

